<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShelterMe.WelcomePage">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#F4C6B7">
            <Label Text="Shelter Me"
                   FontSize="32"
                   AbsoluteLayout.LayoutBounds=".6,.1,.7,.2"
                   AbsoluteLayout.LayoutFlags="All"/>
            <Image Source="ShelterMeLogo.jpg" 
                   Aspect="Fill" 
                   AbsoluteLayout.LayoutBounds=".5,.4,1,.3" 
                   AbsoluteLayout.LayoutFlags="All" />
            <Button Text="Login"
                    AbsoluteLayout.LayoutBounds=".85,.65,.4,.1"
                    AbsoluteLayout.LayoutFlags="All"
                    FontSize="Micro"
                    Clicked="LoginOnClicked" />
            <Button Text="Sign Up" 
                    AbsoluteLayout.LayoutBounds=".15,.65,.4,.1"
                    AbsoluteLayout.LayoutFlags="All"
                    FontSize="Micro"
                    Clicked="SignUpClicked"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>